<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/pemilihan_penyelenggara_notifkosong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Data Masih Kosong"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#b1b1b1"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/pemilihan_penyelenggara_Bungkus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagePemilihan"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/picture" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pemilihan_judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />


            </LinearLayout>

            <TextView
                android:id="@+id/pemilihan_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="#de949494" />

            <TextView
                android:id="@+id/pemilihan_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

            <TextView
                android:id="@+id/pemilihan_penyelenggara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="\@"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="#de949494"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>